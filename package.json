{
  "name": "refill-hub",
  "version": "2.1.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --disable-host-check --host 0.0.0.0",
    "start-container": "npm rebuild node-sass && npm start",
    "build": "ng build --prod",
    "build-dev": "ng build",
    "build-update": "npm run build && npm run update-libraries",
    "test": "ng test --code-coverage",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "update-libraries": "node update-libraries.js"
  },
  "lint-staged": {
    "**/*.*,!pom.xml": [
      "prettier --write",
      "ng lint --fix",
      "ng test --code-coverage --watch=false",
      "npm run build",
      "git add"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^5.2.0",
    "@angular/common": "^5.2.0",
    "@angular/compiler": "^5.2.0",
    "@angular/core": "^5.2.0",
    "@angular/forms": "^5.2.0",
    "@angular/http": "^5.2.0",
    "@angular/platform-browser": "^5.2.0",
    "@angular/platform-browser-dynamic": "^5.2.0",
    "@angular/router": "^5.2.0",
    "@types/googlemaps": "~3.38.1",
    "@ng-select/ng-select": "^1.6.3",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.6.10",
    "fingerprintjs2": "^2.1.0",
    "karma-mocha-reporter": "^2.2.5",
    "md5-typescript": "^1.0.5",
    "ngx-cookie-service": "^2.2.0",
    "ngx-device-detector": "1.4.1",
    "ngx-popper": "^3.0.1",
    "prettier": "^1.19.1",
    "rxjs": "^5.5.6",
    "web-animations-js": "^2.3.2",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.1",
    "@angular/compiler-cli": "^5.2.0",
    "@angular/language-service": "^5.2.0",
    "@types/google.analytics": "0.0.39",
    "@types/jasmine": "~2.8.3",
    "@types/jasminewd2": "^2.0.8",
    "@types/node": "~6.0.60",
    "codelyzer": "^4.0.1",
    "handlebars": "4.5.0",
    "husky": "^3.1.0",
    "jasmine-core": "^2.99.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~2.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^9.4.3",
    "protractor": "~5.1.2",
    "ts-node": "~4.1.0",
    "tslint": "~5.9.1",
    "typescript": "~2.8.0"
  }
}
